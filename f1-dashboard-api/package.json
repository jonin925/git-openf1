{
  "name": "f1-dashboard-api",
  "version": "1.0.0",
  "description": "F1 Dashboard API with OpenF1 integration",
  "main": "dist/app.js",

  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "migrate": "docker exec -i f1-postgres-dev psql -U postgres -d f1dashboard_dev < migrations/001_initial_schema.sql",
    "migrate:telemetry": "docker exec -i f1-postgres-dev psql -U postgres -d f1dashboard_dev < migrations/002_telemetry_tables.sql",
    "sync:telemetry-2025": "ts-node scripts/sync-telemetry-2025.ts",
    "sync:data": "ts-node src/scripts/syncData.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts"
  },

  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.35.0",
    "sequelize-typescript": "^2.1.6",
    "socket.io": "^4.7.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.7",
    "@types/validator": "^13.11.5",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "jest": "^19.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
